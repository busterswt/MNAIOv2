---

# Define haproxy service hosts independent from
# Openstack service hosts
haproxy_hosts: &infra_hosts
{% for host in groups['loadbalancer_hosts'] %}
  {{ hostvars[host]['inventory_hostname'] }}:
    ip: {{ hostvars[host].fixed_ip }}
    no_containers: true
{% endfor %}


# Define Openstack services hosts on a shared
# 3 hosts design
controller_hosts: &controller_hosts
{% for host in groups['controller_hosts'] %}
  {{ hostvars[host]['inventory_hostname'] }}:
    ip: {{ hostvars[host]['fixed_ip'] }}
    no_containers: true
    container_vars:
      nova_virt_type: ironic
{% endfor %}

